# Environment variables for FridgeToPlate application

# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# API Keys
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key-here
SPOONACULAR_API_KEY=your-spoonacular-api-key-here

# Feature toggles (set to True to use mock data instead of real APIs)
USE_MOCK_VISION=True
USE_MOCK_RECIPES=True

# Database
DATABASE_URL=sqlite:///fridgetoplate.db
